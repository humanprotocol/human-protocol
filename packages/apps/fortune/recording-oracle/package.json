{
  "name": "@human-protocol/fortune-recording-oracle",
  "version": "1.0.0",
  "description": "Fortune Recording Oracle",
  "author": "Human Protocol",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=${NODE_ENV:=development} nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "postgres": "docker compose up -d postgres",
    "docker": "docker compose up -d",
    "local": "docker compose down && (concurrently --hide 0 \"yarn docker\" \"yarn recording-oracle:dev\" )",
    "setup:local": "ts-node ./test/setup.ts"
  },
  "dependencies": {
    "@human-protocol/sdk": "*",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.8",
    "@nestjs/platform-express": "^10.2.6",
    "@nestjs/swagger": "^7.1.13",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "helmet": "^7.1.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.4.3",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^10.3.1",
    "@types/express": "^4.17.13"
  }
}
