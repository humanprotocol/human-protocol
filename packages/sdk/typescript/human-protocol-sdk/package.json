{
  "name": "@human-protocol/sdk",
  "description": "Human Protocol SDK",
  "version": "5.1.0",
  "files": [
    "src",
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "tsc --build --clean && rm -rf ./dist",
    "clean:doc": "rm -rf ../../../../docs/sdk/typescript/",
    "build": "yarn clean && tsc --build",
    "build:doc": "yarn clean:doc && typedoc --plugin typedoc-plugin-markdown --out ../../../../docs/sdk/typescript/",
    "test": "vitest -u",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write '**/*.{ts,json}'",
    "prepack": "[ \"${SKIP_PREPACK:-}\" = \"true\" ] && exit 0 || yarn build"
  },
  "repository": {
    "url": "https://github.com/humanprotocol/human-protocol.git",
    "directory": "packages/sdk/typescript/human-protocol-sdk"
  },
  "keywords": [
    "human-protocol",
    "sdk",
    "node",
    "typescript",
    "ethereum"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@human-protocol/core": "workspace:*",
    "axios": "^1.4.0",
    "ethers": "~6.15.0",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "graphql-tag": "^2.12.6",
    "openpgp": "^5.11.2",
    "secp256k1": "^5.0.1",
    "validator": "^13.12.0",
    "vitest": "^3.0.9"
  },
  "devDependencies": {
    "@types/validator": "^13.15.4",
    "eslint": "^9.39.1",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.2.3",
    "typescript": "^5.8.3"
  },
  "typedocOptions": {
    "entryPoints": [
      "./src/base.ts",
      "./src/encryption.ts",
      "./src/escrow.ts",
      "./src/kvstore.ts",
      "./src/operator.ts",
      "./src/staking.ts",
      "./src/storage.ts",
      "./src/statistics.ts",
      "./src/transaction.ts",
      "./src/enums.ts",
      "./src/graphql/types.ts",
      "./src/interfaces.ts",
      "./src/types.ts"
    ]
  }
}
