{
  "name": "@human-protocol/sdk",
  "description": "Human Protocol SDK",
  "version": "1.1.16",
  "files": [
    "src",
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./dist",
    "clean:doc": "rm -rf ../../../../docs/sdk/typescript/",
    "prebuild": "yarn workspace @human-protocol/core build",
    "build": "yarn clean && tsc",
    "build:doc": "yarn clean:doc && npx typedoc --plugin typedoc-plugin-markdown --out ../../../../docs/sdk/typescript/",
    "prepublish": "yarn build",
    "test": "vitest -u",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write '**/*.{ts,json}'"
  },
  "repository": {
    "url": "https://github.com/humanprotocol/human-protocol.git",
    "directory": "packages/sdk/typescript/human-protocol-sdk"
  },
  "keywords": [
    "human-protocol",
    "sdk",
    "node",
    "typescript",
    "ethereum"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@human-protocol/core": "*",
    "aws-sdk": "^2.1528.0",
    "axios": "^1.4.0",
    "crypto": "^1.0.1",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "graphql-tag": "^2.12.6",
    "minio": "^7.0.32",
    "openpgp": "^5.10.2",
    "secp256k1": "^4.0.3",
    "vitest": "^0.30.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "typedoc": "^0.25.1",
    "typedoc-plugin-markdown": "^3.16.0"
  },
  "typedocOptions": {
    "entryPoints": [
      "./src/base.ts",
      "./src/encryption.ts",
      "./src/escrow.ts",
      "./src/kvstore.ts",
      "./src/operator.ts",
      "./src/staking.ts",
      "./src/storage.ts",
      "./src/statistics.ts"
    ]
  }
}
