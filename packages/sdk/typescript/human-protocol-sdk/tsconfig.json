{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2017", "ES7", "ES6"],
    "declaration": true,
    "outDir": "./dist",
    "declarationMap": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "useUnknownInCatchVariables": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src"],
  "typedocOptions": {
    "entryPoints": [
      "src/index.ts",
      "src/escrow.ts",
      "src/kvstore.ts",
      "src/operator.ts",
      "src/staking.ts",
      "src/statistics.ts",
      "src/storage.ts",
      "src/transaction.ts",
      "src/enums.ts",
      "src/graphql/types.ts",
      "src/interfaces.ts",
      "src/types.ts"
    ]
  }
}
